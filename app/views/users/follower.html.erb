<h1>Follow User</h1>

<% if !@user.following_user.nil? %>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
    <% @user.following_user.each do |user| %>
  <tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 10, 10, fallback: "no-image-mini.jpg" %></td>
      <td><%= user.name %></td>
      <td>フォロー数：<%= user.follower.count %></td>
      <td>フォロワー数：<%= user.followed.count %></td>
      <td><%= link_to "Show", user_path(user) %></td>
  </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h4>ユーザーはいません</h4>
<% end %>  
